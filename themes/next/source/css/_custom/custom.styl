}

//小代码块
code {
    margin: 2px;
    color: #c7254e;
    background-color: #f9f2f488;
    border-radius: 2px;
}

// 大代码块的自定义样式
.highlight, pre {
    margin: 5px;
    padding: 5px;
}
pre .deletion {
    background: rgba(255,0,0,0.2);
}
pre .addition {
    background: rgba(0,255,255,0.2);
}
.highlight, pre {
    border: 1px solid #bdc3c7;
}
.highlight figcaption {
    background: #2d2d2d;
    border-bottom: 1px solid #111;
}

