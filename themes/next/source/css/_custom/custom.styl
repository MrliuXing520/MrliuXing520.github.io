// 文章内链接文本样式
.post-body p a{
  color: #5c4cc3;
  border-bottom: none;
  border-bottom: 1px solid #5c4cc3;
  &:hover {
    color: #fc6423;
    border-bottom: none;
    border-bottom: 1px solid #fc6423;
  }
  &:active {
    color: #df3ae0;
    border-bottom: none;
    border-bottom: 1px solid #df3ae0;
  }
}

//文章分割线
.posts-expand .post-eof {
